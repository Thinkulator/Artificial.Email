<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <filter>
        <filter-name>PersistentCookieFilter</filter-name>
        <filter-class>email.artificial.servlets.PersistentCookieFilter</filter-class>
    </filter>
    <filter>
        <filter-name>JSessionIDFilter</filter-name>
        <filter-class>email.artificial.servlets.JSessionIDFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>JSessionIDFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>PersistentCookieFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>ListMessages</servlet-name>
        <servlet-class>email.artificial.servlets.ListMessagesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewMessageServlet</servlet-name>
        <servlet-class>email.artificial.servlets.ViewMessageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>email.artificial.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>email.artificial.servlets.RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountServlet</servlet-name>
        <servlet-class>email.artificial.servlets.AccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewAccountServlet</servlet-name>
        <servlet-class>email.artificial.servlets.NewAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfigExampleServlet</servlet-name>
        <servlet-class>email.artificial.servlets.ConfigExampleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OpenServlet</servlet-name>
        <servlet-class>email.artificial.servlets.OpenServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListMessages</servlet-name>
        <url-pattern>/List/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListMessages</servlet-name>
        <url-pattern>/List</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewMessageServlet</servlet-name>
        <url-pattern>/Message/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewMessageServlet</servlet-name>
        <url-pattern>/Message</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Logoff</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/Registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountServlet</servlet-name>
        <url-pattern>/Account/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewAccountServlet</servlet-name>
        <url-pattern>/NewAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfigExampleServlet</servlet-name>
        <url-pattern>/Example</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OpenServlet</servlet-name>
        <url-pattern>/a/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
